@{
    Page.Title = "Đăng Nhập Hệ Thống Quản Lý";
}

@Scripts.Render("~/bundles/quanlydangnhapjs")
<script src="~/Scripts/common/webcam.min.js"></script>
<div class="login-box" ng-app="QuanLyDangNhapModule" ng-controller="commonCtrl" ng-cloak>
      <div class="login-logo" >
        <b>@Html.ActionLink("HỆ THỐNG QUẢN LÝ", "Index", "Home")</b>
      </div><!-- /.login-logo -->
      <div class="login-box-body" ng-controller="QuanLyDangNhapControl" ng-init="" click-event-listener ng-cloak>
          <webcam channel="myChannel"></webcam>



        <p class="login-box-msg">Đăng Nhập Dashboard Skyfire</p>
        <form id="dangnhapForm" name="dangnhapForm" class="form-horizontal" novalidate>
            <div class="form-group has-feedback" show-errors>
            <input type="email" name="manhanvien"
					ng-model="model.form.dangnhap.manhanvien"
					class="form-control"
					placeholder="Tài Khoản Nhân Viên"
					ng-keypress="$event.keyCode == 13 && doLogin(model.form.dangnhap)" 
					required/>
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            <p class="help-block" ng-if="dangnhapForm.manhanvien.$error.required">Vui lòng nhập tài khoản nhân viên.</p>
        	<p class="help-block" ng-if="dangnhapForm.manhanvien.$error.email">Định dạng Email không chính xác.</p>
          </div>
          <div class="form-group has-feedback" show-errors>
            <input type="password" name="matkhau"
 					ng-model="model.form.dangnhap.matkhau"
					class="form-control"
					placeholder="Mật Khẩu"
					ng-keypress="$event.keyCode == 13 && doLogin(model.form.dangnhap)"
					required/>
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            <p class="help-block" ng-if="dangnhapForm.matkhau.$error.required">Vui lòng nhập mật khẩu.</p>
          </div>
          <div class="row">

            <div class="form-group has-feedback">
              <button type="submit" class="btn btn-primary btn-block btn-flat"
              	ng-click="doLogin(model.form.dangnhap)">Sign In</button>
            </div><!-- /.col -->
          </div>
        </form>

        <a href="#">Quên Mật Khẩu?</a>

      </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
<style>
    body {
          background: #d2d6de !important;
    }

</style>