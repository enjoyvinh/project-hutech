@using DBTruyXuat.Common;
@using TruyXuatDB;
@using TruyXuatDB.DAO;
@using TruyXuatDB.DTO;

<!--Begin wraper-->
<div class="sideblock right">

    <div class="side_news">
        <div class="titleside"><span></span>Bài viết mới nhất</div>

        <div class="side_ctn">
            <ul>
                @{
                    BanTinDAO BanTinDAO = new BanTinDAO();

                    List<View_QuanLyBanTin_BanTin> dsBanTinMoiNhat = BanTinDAO.getDanhSachBanTinMoiNhat();
                }

                @foreach (var item in dsBanTinMoiNhat)
                {
                    <li>
                        <a href="~/TinTuc/BanTin/@item.MABANTIN" >
                            <img src="~/Images/HinhAnhBanTin/@item.HINHANH" title="">
                        </a>
                        <h2>
                            <a href="~/TinTuc/BanTin/@item.MABANTIN">@item.TIEUDE</a>
                            <p>
                                @item.NOIDUNGTOMTAT.Substring(0,50)...
                            </p>
                        </h2>
                        <a href="~/TinTuc/BanTin/@item.MABANTIN">
                            <span>@item.NGAYDANG</span>
                        </a>
                    </li>
                }
                <l
            </ul>
        </div>
    </div>
    
</div>
