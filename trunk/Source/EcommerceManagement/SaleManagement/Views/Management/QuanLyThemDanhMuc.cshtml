@{
    if (!WebSecurity.IsAuthenticated)
    {
        Response.Redirect("~/Home/Login");
    }

    Page.Title = "Thêm Danh Mục";
}

<div class="modal-body" style="padding: 20px 20px 5px 20px;">
    <div class="container-fluid">

        <!-- Start add contents here -->
        <form id="formThem" name="formThem" class="form-horizontal" role="form" novalidate>
            <div class="row">
                <div class="col-sm-12 col-lg-12">
                    <div class="form-group has-feedback" show-errors>
                        <label for="tendanhmuc" class="col-md-2 control-label">
                            Tên Danh Mục:
                        </label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" id="tendanhmuc"
                                   name="tendanhmuc" maxlength="30"
                                   ng-model="model.form.chitiet.tendanhmuc" auto-focus="true"
                                   required />
                        </div>
                        <div class="col-md-4">
                            <p class="help-block" ng-if="formThem.tendanhmuc.$error.required">Vui lòng nhập tên danh mục.</p>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        </section>
        <!-- end add contents here -->
    </div>
</div>
<div class="clearfix"></div>
<hr class="content-separator">
<div class="modal-footer margin-t-1 padding-t-10 padding-r-10" style="padding-bottom: 10px;">
    <div class="pull-right">
        <span>
            <button class="btn btn-tm1-3 pull-left" ng-click="doAddNew(model.form.chitiet)">
                <i class="glyphicon glyphicon-cog"></i>
                Đăng Ký
            </button>
        </span>
    </div>
    <div class="form-group pull-left">
        <button class="btn btn-tm2-3" ng-click="close()">
            <i class="glyphicon glyphicon-remove"></i>
            Đóng
        </button>
    </div>
</div>


