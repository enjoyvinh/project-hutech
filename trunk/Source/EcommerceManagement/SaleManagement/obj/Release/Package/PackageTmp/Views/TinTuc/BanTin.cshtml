@{
        
    if(@ViewContext.RouteData.Values["id"] == null)
    {
        Response.Redirect("~/Error/NotFound");
    }
    
    String id = @ViewContext.RouteData.Values["id"].ToString();

    BanTinDAO BanTinDAO = new BanTinDAO();
    Request_QuanLyBanTin_ParamTimKiem param =  new Request_QuanLyBanTin_ParamTimKiem();
    param.MABANTIN = Convert.ToInt32(id);
    View_QuanLyBanTin_BanTin ctBanTin = BanTinDAO.getChiTietBanTin(param);

    Page.Title = ctBanTin.TIEUDE;
